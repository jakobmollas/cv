{
  "name": "cv",
  "version": "1.0.0",
  "watch": {
    "build-html": {
      "patterns": [
        "src/html"
      ],
      "extensions": "js, json, hbs"
    },
    "build-css": {
      "patterns": [
        "src/scss"
      ],
      "extensions": "scss"
    }
  },
  "scripts": {
    "watch": "npm-watch",
    "build-html": "node src/html/compile-template.js src/html/index.hbs src/html/content.json docs/index.html",
    "build-css": "sass src/scss/styles.scss docs/css/styles.css",
    "build": "npm rum build-html && npm run build-css"
  },
  "dependencies": {},
  "devDependencies": {
    "handlebars": "^4.7.7",
    "npm-watch": "^0.10.0",
    "sass": "^1.36.0"
  }
}
